generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // use POOLER URL (pgbouncer) at runtime
  directUrl = env("DIRECT_URL") // use DIRECT (non-pooler) for migrations
}

enum UserRole {
  ADMIN
  STAFF
  LANGRI
  VIEWER
}

enum LocationType {
  GURDWARA
  OUTSIDE_GURDWARA
}

enum ProgramCategory {
  KIRTAN
  PATH
  OTHER
}

enum StaffSkill {
  PATH
  KIRTAN
}

enum Jatha {
  A
  B
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  EXPIRED
}

enum AssignmentState {
  PROPOSED
  CONFIRMED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  phone         String?
  passwordHash  String?
  role          UserRole  @default(VIEWER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth relations
  accounts Account[]
  sessions Session[]

  // App relations
  createdBookings  Booking[] @relation("CreatedBy")
  approvedBookings Booking[] @relation("ApprovedBy")
}

model Hall {
  id        String   @id @default(cuid())
  name      String   @unique
  capacity  Int?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings Booking[]
}

model ProgramType {
  id                   String          @id @default(cuid())
  name                 String          @unique
  category             ProgramCategory
  requiresHall         Boolean         @default(true)
  canBeOutsideGurdwara Boolean         @default(false)
  isActive             Boolean         @default(true)

  // Staffing & duration rules
  durationMinutes Int @default(120)
  minPathers      Int @default(0)
  minKirtanis     Int @default(0)
  peopleRequired  Int @default(1)

  compWeight Int @default(1)

  // Smart scheduling fields
  trailingKirtanMinutes    Int @default(0) // if >0, last N minutes need a full jatha (3 kirtanis)
  pathRotationMinutes      Int @default(0) // if >0, slice PATH work into N-minute shifts
  pathClosingDoubleMinutes Int @default(0) // last N minutes need 2 pathis instead of 1

  bookingItems BookingItem[]
}

model Booking {
  id    String   @id @default(cuid())
  title String
  start DateTime
  end   DateTime

  locationType LocationType
  hallId       String?
  hall         Hall?        @relation(fields: [hallId], references: [id])

  attendees Int     @default(1)
  address   String?

  contactName  String
  contactPhone String
  contactEmail String? @db.VarChar(320)
  notes        String?

  createdById String?
  createdBy   User?   @relation("CreatedBy", fields: [createdById], references: [id], onDelete: SetNull, onUpdate: Cascade)

  approvedAt   DateTime?
  approvedById String?
  approvedBy   User?     @relation("ApprovedBy", fields: [approvedById], references: [id], onDelete: SetNull, onUpdate: Cascade)

  items       BookingItem[]
  assignments BookingAssignment[] @relation("BookingAssignments")

  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  status    BookingStatus @default(PENDING)

  @@index([start, end])
  @@index([status])
  @@index([hallId])
  @@index([createdById])
  @@index([approvedById])
  @@index([contactEmail])
}

model BookingItem {
  id        String  @id @default(cuid())
  bookingId String
  booking   Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  programTypeId String
  programType   ProgramType @relation(fields: [programTypeId], references: [id], onDelete: Restrict, onUpdate: Cascade)

  notes String?

  assignments BookingAssignment[] @relation("ItemAssignments")

  @@unique([bookingId, programTypeId])
  @@index([programTypeId])
}

model Staff {
  id        String       @id @default(cuid())
  name      String       @unique
  skills    StaffSkill[]
  isActive  Boolean      @default(true)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  jatha Jatha?
  email String? @unique
  phone String?

  assignments BookingAssignment[] @relation("StaffAssignments")
}

model BookingAssignment {
  id            String @id @default(cuid())
  bookingId     String
  bookingItemId String
  staffId       String

  // Windowed assignment (if null => whole booking window)
  start DateTime?
  end   DateTime?

  // NEW
  state AssignmentState @default(PROPOSED)

  booking     Booking     @relation("BookingAssignments", fields: [bookingId], references: [id], onDelete: Cascade)
  bookingItem BookingItem @relation("ItemAssignments", fields: [bookingItemId], references: [id], onDelete: Cascade)
  staff       Staff       @relation("StaffAssignments", fields: [staffId], references: [id], onDelete: Restrict)

  createdAt DateTime @default(now())

  // allow multiple windows per staff+item, but dedupe exact duplicates
  @@unique([bookingItemId, staffId, start, end])
  // helpful for queries
  @@index([bookingId, start, end])
  @@index([staffId, start, end])
  @@index([staffId, state]) // NEW
  @@index([bookingId, state]) // NEW
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
