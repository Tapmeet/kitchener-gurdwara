generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  SECRETARY
  GRANTHI
  LANGRI
  VIEWER
}

enum LocationType {
  GURDWARA
  OUTSIDE_GURDWARA
}

enum ProgramCategory {
  KIRTAN
  PATH
  OTHER
}

enum StaffSkill {
  PATH
  KIRTAN
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  phone     String?
  role      UserRole @default(VIEWER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings Booking[] @relation("BookedBy")
}

model Hall {
  id        String   @id @default(cuid())
  name      String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings Booking[]
}

model ProgramType {
  id                   String          @id @default(cuid())
  name                 String          @unique
  category             ProgramCategory
  defaultMinutes       Int             @default(120)
  requiresHall         Boolean         @default(true)
  requiresRagi         Int             @default(0)
  requiresGranthi      Int             @default(0)
  canBeOutsideGurdwara Boolean         @default(false)
  isActive             Boolean         @default(true)

  // Staffing & duration rules
  durationMinutes Int @default(120)
  minPathers      Int @default(0)
  minKirtanis     Int @default(0)
  peopleRequired  Int @default(1)

  bookingItems BookingItem[]
}

model Booking {
  id    String   @id @default(cuid())
  title String
  start DateTime
  end   DateTime

  locationType LocationType
  hallId       String?
  hall         Hall?        @relation(fields: [hallId], references: [id])

  attendees Int @default(1)

  address String?

  contactName  String
  contactPhone String
  notes        String?

  createdById String?
  createdBy   User?   @relation("BookedBy", fields: [createdById], references: [id])

  items       BookingItem[]
  assignments BookingAssignment[] @relation("BookingAssignments") // ✅ single back-relation only

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([start, end])
}

model BookingItem {
  id        String  @id @default(cuid())
  bookingId String
  booking   Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  programTypeId String
  programType   ProgramType @relation(fields: [programTypeId], references: [id], onDelete: Restrict, onUpdate: Cascade)

  notes String?

  assignments BookingAssignment[] @relation("ItemAssignments") // ✅ single back-relation only

  @@unique([bookingId, programTypeId])
  @@index([programTypeId])
}

model Staff {
  id        String       @id @default(cuid())
  name      String       @unique
  skills    StaffSkill[]
  isActive  Boolean      @default(true)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  assignments BookingAssignment[] @relation("StaffAssignments")
}

model BookingAssignment {
  id            String @id @default(cuid())
  bookingId     String
  bookingItemId String
  staffId       String

  booking     Booking     @relation("BookingAssignments", fields: [bookingId], references: [id], onDelete: Cascade)
  bookingItem BookingItem @relation("ItemAssignments", fields: [bookingItemId], references: [id], onDelete: Cascade)
  staff       Staff       @relation("StaffAssignments", fields: [staffId], references: [id], onDelete: Restrict)

  createdAt DateTime @default(now())

  @@unique([bookingItemId, staffId])
  @@index([bookingId])
  @@index([staffId])
}
