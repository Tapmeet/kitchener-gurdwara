{
  "name": "gurdwara-booking",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "// ---------- DEV ----------": "",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "// ---------- PRISMA (cross-platform) ----------": "",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:status": "prisma migrate status",
    "// Run migrations locally against DEV DB (uses prisma/.env or root .env)": "",
    "migrate:dev": "prisma migrate dev -n init",
    "// Deploy pending migrations to the DB defined by env (add DIRECT_URL).": "",
    "migrate:deploy": "cross-env NODE_ENV=production prisma migrate deploy",
    "// ---------- SEED ----------": "",
    "seed": "tsx prisma/seed.ts",
    "seed:dev": "dotenv -e .env -- tsx prisma/seed.ts",
    "seed:prod": "dotenv -e .env.production -- tsx prisma/seed.ts",
    "// ---------- TEST / LINT / TYPES ----------": "",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "// ---------- VERCEL BUILD HOOKS ----------": "",
    "postinstall": "prisma generate",
    "postbuild": "prisma migrate deploy"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.7.0",
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "@fullcalendar/react": "^6.1.19",
    "@fullcalendar/timegrid": "^6.1.19",
    "@googlemaps/js-api-loader": "^1.16.10",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.16.2",
    "bcrypt": "^6.0.0",
    "next": "15.5.3",
    "next-auth": "^4.24.11",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/bcrypt": "^6.0.0",
    "@types/google.maps": "^3.58.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "postcss": "^8.5.6",
    "prisma": "^6.16.2",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.5",
    "typescript": "^5",
    "vitest": "^2.0.0"
  }
}
